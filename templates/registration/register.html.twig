{% extends 'base.html.twig' %}


{% block body %}
    <style>
        body{
            width: 100%;
            height: 100%;

        }
        .card {
            padding: 2rem 2.5rem;
            border: unset;
            max-width: 28rem;
            margin: 10% auto;
            box-shadow: 0 10px 15px -3px rgba(15,23,41,0.1),0 4px 6px -2px rgba(15,23,41,0.05);
            border-radius: 4px;
        }
        .card form {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
            color: #1E293B;
        }
        .card form div{
            display: flex;
            flex-direction: column;
            width: 90%;
            gap: 10px;
        }

        .card form div:nth-child(3){
            display: flex;
            justify-content: flex-end;
            align-items: center;
            flex-direction: row-reverse;
            font-size: 14px;
        }
        .card form div:nth-child(3) input:checked{
            background-color: #5367D5;
            border-color: #6174d1;
        }
        .card form div input{
            padding: 3px 7px 4px;
            transition: box-shadow .08s ease-in,color .08s ease-in;
            white-space: nowrap;
            word-break: keep-all;
        }
        .btn{
            justify-content: flex-start;
            background-color: #5367D5;
            color: whitesmoke;
            border-radius: 5px;
        }
    </style>


    <div class="card">
        <h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <button type="submit" class="btn">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
